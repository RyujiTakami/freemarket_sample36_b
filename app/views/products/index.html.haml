      .products-container
        %h3
          = link_to "レディース 新着アイテム", root_path
        .flexbox
          - @products_ladies.each do |product|
            %section.product
              = link_to "/products/#{product.id}" do
                %figure.product__image
                  = image_tag "#{product.images[0][:image]}", width: "213", height: "220"
                .product__detail
                  %h4 #{product.name}
                  .product__detail--items.clearfix
                    .price-part ¥ #{product.price}
                    %p.tax-part (税込)
        = link_to "すべての商品をみる", root_path, class: "to-all-products"
